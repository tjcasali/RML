@model RML.Models.UserInfo

<div class="text-center">
    <h1 class="display-4">Enter your Sleeper League ID.</h1>

</div>

@using (Html.BeginForm("DisplayLeague", "Sleeper"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.LeagueID)
        @Html.TextBoxFor(m => m.LeagueID, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}