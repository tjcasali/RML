@model RML.Models.UserInfo

<link href="~/StyleSheet.css" rel="stylesheet" />

<body style="background-color:#18202F;">

    <div class="homePage">

        <div class="littleGap"></div>

        <div class="infobox-container">
            <div class="infobox-child">
                <h6>Invalid League ID!</h6><br />
                <p>
                    Either your Sleeper ID was incorrect or we can't reach Sleeper's API at the moment.
                    Please confirm you entered the correct ID and try again!
                </p>

            </div>
        </div>

        <div class="littleGap"></div>

        <div class="sleeperID">
            <h1>Enter your Sleeper League ID.</h1><br />

            @using (Html.BeginForm("DisplayLeague", "Sleeper"))
            {
                @Html.TextBoxFor(m => m.LeagueID)
                <button type="submit" class="btn btn-info">Submit</button>
            }
        </div>
        <div class="bigGap"></div>

    </div>
</body>
